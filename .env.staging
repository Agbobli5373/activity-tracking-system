# Staging Environment Configuration
# Activity Tracking System - Staging Settings

# Application Configuration
APP_NAME="Activity Tracking System (Staging)"
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_URL=https://staging.your-domain.com

# Logging Configuration
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=activity_tracking_staging
DB_USERNAME=activity_staging
DB_PASSWORD=

# Cache and Session Configuration
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=4
REDIS_CACHE_DB=5
REDIS_SESSION_DB=6
REDIS_QUEUE_DB=7

# Cache Configuration
CACHE_PREFIX=activity_tracking_staging_
CACHE_DEFAULT_TTL=1800
DASHBOARD_CACHE_TTL=300
REPORT_CACHE_TTL=900

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-domain.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="staging@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security Configuration
SESSION_TIMEOUT=3600
SESSION_WARNING_TIME=300
MAX_INPUT_LENGTH=2000
MAX_FILENAME_LENGTH=255
MAX_FILE_SIZE=10240
LOGIN_RATE_LIMIT=10
LOGIN_DECAY_MINUTES=15
API_RATE_LIMIT=120
REPORT_RATE_LIMIT=20

# Audit Configuration
AUDIT_LOG_ACTIONS=true
AUDIT_LOG_IPS=true
AUDIT_LOG_USER_AGENTS=true
AUDIT_RETENTION_DAYS=90

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_AGE_DAYS=90

# IP Filtering
IP_FILTERING_ENABLED=false
IP_WHITELIST=
IP_BLACKLIST=

# Performance Configuration
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=10000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=14
BACKUP_DISK=local

# Monitoring Configuration
TELESCOPE_ENABLED=true
HORIZON_ENABLED=true

# SSL Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000